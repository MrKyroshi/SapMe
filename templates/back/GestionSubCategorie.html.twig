{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }}Gestion SubCatégories
{% endblock %}

{% block body %}
    <table class="table table-primary table-striped">
        <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Titre</th>
            <th scope="col">Actions</th>
        </tr>

        </thead>
        <tbody>


        <tr>
            {% for Subcategorie  in Subcategories %}

            <th scope="row">{{ Subcategorie.id }}</th>

            <td>{{ Subcategorie.title | default (' <span style="color:red;">Aucun catégorie affiliéé</span>') | raw  }}</td>

            <td><a href="{{ path('editSubCategorie', {'id': Subcategorie.id}) }}" class="btn btn-info">Modifier</a>
                <a href="{{ path('deleteSubCategorie', {'id': Subcategorie.id}) }}" onclick="return confirm('Etes-vous sûr?')" class="btn btn-danger">Supprimer</a></td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

